<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">
    <Toolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/green">

        <ImageView
            android:id="@+id/backIMG"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/arrow"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Wanted"
            android:textSize="22sp"
            android:textColor="@color/white"
            android:fontFamily="@font/scala"
            android:layout_gravity="center_horizontal"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/share"
            android:layout_gravity="end"
            android:layout_marginEnd="20dp"/>
    </Toolbar>
    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_horizontal">
        <LinearLayout
            android:layout_marginTop="23dp"
            android:layout_marginLeft="23dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/imageView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                app:srcCompat="@drawable/circle" />

            <!--            <ImageView-->
            <!--                android:layout_width="140dp"-->
            <!--                android:layout_height="140dp"-->
            <!--                android:src="@drawable/user"-->
            <!--                android:layout_marginTop="11dp"-->
            <!--                />-->
            <TextView
                android:layout_marginTop="13dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nicknames: "
                android:textSize="16sp"/>
            <TextView
                android:id="@+id/nicknames"
                android:layout_marginTop="6dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="Enter Nickname"
                android:textSize="16sp"/>
            <View
                android:layout_width="150dp"
                android:layout_height="2dp"
                android:background="@color/green"/>


        </LinearLayout>


        <LinearLayout
            android:layout_marginLeft="23dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Status: "
                android:textSize="16sp"/>
            <EditText
                android:background="@color/white"
                android:id="@+id/status_wanted"
                android:layout_marginTop="6dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Purusit"
                android:textSize="16sp"/>
            <View
                android:layout_width="150dp"
                android:layout_height="2dp"
                android:background="@color/green"/>
            <TextView
                android:layout_marginTop="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Firstname: "
                android:textSize="16sp"/>
            <EditText
                android:background="@color/white"
                android:id="@+id/first_name"
                android:layout_marginTop="6dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Purusit"
                android:textSize="16sp"/>
            <View
                android:layout_width="150dp"
                android:layout_height="2dp"
                android:background="@color/green"/>
            <TextView
                android:layout_marginTop="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Lastname: "
                android:textSize="16sp"/>
            <EditText
                android:background="@color/white"
                android:id="@+id/last_name"
                android:layout_marginTop="6dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Purusit"
                android:textSize="16sp"/>
            <View
                android:layout_width="150dp"
                android:layout_height="2dp"
                android:background="@color/green"/>
            <TextView
                android:id="@+id/middle_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Middlename: "
                android:textSize="16sp"/>
            <EditText
                android:background="@color/white"
                android:id="@+id/status"
                android:layout_marginTop="6dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="Enter middlename:"
                android:textSize="16sp"/>
            <View
                android:layout_width="150dp"
                android:layout_height="2dp"
                android:background="@color/green"/>
        </LinearLayout>



    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="45dp"
        android:paddingEnd="34dp"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Last location:"
            android:textSize="16sp"/>
        <TextView
            android:id="@+id/last_location"
            android:layout_marginTop="6dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Enter Last Location"
            android:textSize="16sp"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/green"/>
    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="45dp"
        android:paddingEnd="34dp"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Description:"
            android:textSize="16sp"/>
        <EditText
            android:background="@color/white"
            android:id="@+id/description"
            android:layout_marginTop="6dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Enter Description"
            android:textSize="16sp"/>
    </LinearLayout>

</LinearLayout>